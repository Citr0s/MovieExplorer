<Page
    x:Class="MovieExplorer.FilmDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="30px" />
        </Style>
    </Page.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="300"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid VerticalAlignment="Top" Grid.Row="0">
                <Image Grid.Row="0"
                               Name="PosterBackground"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Stretch="UniformToFill">
                </Image>
                <Border  Background="Black" Opacity="0.8" />
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="15">
                        <TextBlock Name="Title" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Name="Rating" FontSize="15px"></TextBlock>
                        <TextBlock Name="Genre" FontSize="15px"></TextBlock>
                        <TextBlock Name="Released" FontSize="15px"></TextBlock>
                    </StackPanel>
                    <Image Grid.Column="1"
                                   Name="Poster"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="15"
                                   Stretch="UniformToFill" />
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel Margin="15">
                    <TextBlock TextWrapping="Wrap" Foreground="Black">Plot</TextBlock>
                    <TextBlock Name="Plot" FontSize="15px" Foreground="Black" TextWrapping="Wrap"></TextBlock>
                    <MediaElement Name="Speech" Visibility="Collapsed"/>
                    <Button Margin="0 0 0 15" Click="ButtonBase_OnClick">Read</Button>

                    <TextBlock TextWrapping="Wrap" Foreground="Black">Trailer</TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="15px" Name="NoTrailer" Visibility="Collapsed"  Foreground="Black">Sorry, we could not find a trailer for this film.</TextBlock>
                    <ProgressRing Name="TrailerSearchRing" Width="50" Height="50" Margin="15" />
                    <MediaElement Name="Trailer"  AreTransportControlsEnabled="True" Visibility="Collapsed" AutoPlay="False"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
